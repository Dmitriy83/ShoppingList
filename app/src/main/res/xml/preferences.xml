<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="@string/pref_title"
    android:key="pref_key_settings">

    <com.RightDirection.ShoppingList.views.CustomCheckBoxPreference
        android:key="@string/pref_key_cross_out_action"
        android:summary="@string/pref_cross_out_action_summary"
        android:title="@string/pref_cross_out_action"
        android:defaultValue="true"/>

    <com.RightDirection.ShoppingList.views.CustomCheckBoxPreference
        android:key="@string/pref_key_show_images"
        android:summary="@string/pref_show_images_summary"
        android:title="@string/pref_show_images"
        android:defaultValue="true"/>

    <com.RightDirection.ShoppingList.views.CustomCheckBoxPreference
        android:key="@string/pref_key_show_categories"
        android:summary="@string/pref_show_categories_summary"
        android:title="@string/pref_show_categories"
        android:defaultValue="false"/>

    <com.RightDirection.ShoppingList.views.ShowHelpCheckBoxPreference
        android:key="@string/pref_key_show_help_screens"
        android:title="@string/pref_key_show_help_screens"
        android:defaultValue="true"
        />

    <com.RightDirection.ShoppingList.views.CustomCheckBoxPreference
        android:key="@string/pref_key_show_activity_opening_option_choice"
        android:summary="@string/pref_show_activity_opening_option_choice_summary"
        android:title="@string/pref_show_activity_opening_option_choice"
        android:defaultValue="true"/>

    <com.RightDirection.ShoppingList.views.CustomCheckBoxPreference
        android:key="@string/pref_key_sort_shopping_lists_in_reverse_order"
        android:summary="@string/pref_key_sort_shopping_lists_in_reverse_order_summary"
        android:title="@string/pref_sort_shopping_lists_in_reverse_order"
        android:defaultValue="false"/>

