<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.FragmentInputProductName">

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium_size"
        android:id="@+id/newItemEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:hint="@string/addItemHint"
        android:layout_toLeftOf="@+id/btnAddProductToShoppingList"
        android:layout_toStartOf="@+id/btnAddProductToShoppingList"
        android:inputType="textCapSentences"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:textColor="@android:color/black" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/medium_size"
        android:layout_height="@dimen/medium_size"
        android:id="@+id/btnAddProductToShoppingList"
        android:background="@drawable/ic_add_product"
        android:layout_alignBaseline="@+id/newItemEditText"
        android:layout_alignBottom="@+id/newItemEditText"
        android:layout_alignParentEnd="true" />

</RelativeLayout>