<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_shopping_list_in_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.RightDirection.ShoppingList.activities.HelpShoppingListInShopActivity"
    >

    <TextView
        android:text="@string/HelpInShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtHelp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifHelpImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/product_cross_out_help"
        android:layout_below="@+id/txtHelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/got_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGotIt"
        android:layout_below="@+id/gifHelpImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
