<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingListEditingActivity"
    android:focusable="false"
    android:id="@+id/shoppingListEditingContainerLayout"
    >

    <fragment android:name="com.RightDirection.ShoppingList.views.InputNewItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newItemFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout="@layout/new_item_edit_text_fragment"
        />

    <fragment android:name="com.RightDirection.ShoppingList.views.ShoppingListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frgShoppingList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/newItemFragment"
        android:descendantFocusability="afterDescendants"
        />

</RelativeLayout>
