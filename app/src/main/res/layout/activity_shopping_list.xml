<?xml version="1.0" encoding="utf-8"?>
<com.RightDirection.ShoppingList.views.SoftKeyboardListnedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingListActivity"
    android:focusable="false"
    android:theme="@style/AppTheme.AppBarOverlay">

    <fragment android:name="com.RightDirection.ShoppingList.views.InputNewItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newItemFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/addItemHint"
        tools:layout="@layout/new_item_edit_text_fragment" />

    <fragment android:name="com.RightDirection.ShoppingList.views.ItemsListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frgShoppingListItem"
        android:layout_below="@+id/newItemFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShoppingListDeleteAllItems"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnSave"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShoppingListSave"
        android:background="@android:drawable/ic_menu_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</com.RightDirection.ShoppingList.views.SoftKeyboardListnedRelativeLayout>
