<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etProductName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/product_name_hint"
        android:inputType="textCapSentences"
        android:imeOptions="flagNoExtractUi"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgProduct"
        android:layout_below="@+id/etProductName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/product_picture"
        android:background="@android:drawable/ic_menu_crop"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:longClickable="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/btnSaveProduct"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etProductName"
        android:layout_alignEnd="@+id/etProductName"
        />
</RelativeLayout>
