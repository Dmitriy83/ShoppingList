<resources>

    <!-- Шаблон основной темы (для v21) -->
    <style name="AppThemePattern" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemePattern">
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <!-- For Lollipop -->
        <item name="android:actionModeBackground">@color/action_mode_background_color</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/action_mode_background_color</item>
    </style>

    <style name="ThemeOverlay.AppTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/popup_menu_background_color</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDialogFixedSize" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
